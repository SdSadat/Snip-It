{
  "name": "snippet-actions",
  "displayName": "Snippet Actions",
  "publisher": "SyedSadatAli",
  "description": "Create, manage, and run reusable actions inside VS Code",
  "author": {
    "name": "Syed Sadat Ali"
  },
  "icon": "media/icon.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippet",
          "title": "Snippet",
          "icon": "resources/activity-bar.svg"
        }
      ]
    },
    "views": {
      "snippet": [
        {
          "id": "snippet.actions",
          "name": "Actions"
        }
      ]
    },
    "commands": [
      {
        "command": "snippet.newAction",
        "title": "Snippet: New Action",
        "icon": "$(add)"
      },
      {
        "command": "snippet.editAction",
        "title": "Snippet: Edit Action",
        "icon": "$(edit)"
      },
      {
        "command": "snippet.runAction",
        "title": "Snippet: Run Action",
        "icon": "$(play)"
      },
      {
        "command": "snippet.deleteAction",
        "title": "Snippet: Delete Action",
        "icon": "$(trash)"
      },
      {
        "command": "snippet.showActionPicker",
        "title": "Snippet: Run Action...",
        "icon": "$(rocket)"
      },
      {
        "command": "snippet.importActions",
        "title": "Snippet: Import Actions",
        "icon": "$(cloud-download)"
      },
      {
        "command": "snippet.exportActions",
        "title": "Snippet: Export Actions",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "snippet.refreshActions",
        "title": "Snippet: Refresh Actions",
        "icon": "$(refresh)"
      }
    ],
    "submenus": [
      {
        "id": "snippet.editorSubmenu",
        "label": "Snippet"
      },
      {
        "id": "snippet.explorerSubmenu",
        "label": "Snippet"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "snippet.newAction"
        },
        {
          "command": "snippet.showActionPicker"
        },
        {
          "command": "snippet.importActions"
        },
        {
          "command": "snippet.exportActions"
        }
      ],
      "view/title": [
        {
          "command": "snippet.newAction",
          "when": "view == snippet.actions",
          "group": "navigation@0"
        },
        {
          "command": "snippet.importActions",
          "when": "view == snippet.actions",
          "group": "navigation@1"
        },
        {
          "command": "snippet.exportActions",
          "when": "view == snippet.actions",
          "group": "navigation@2"
        },
        {
          "command": "snippet.refreshActions",
          "when": "view == snippet.actions",
          "group": "navigation@9"
        }
      ],
      "view/item/context": [
        {
          "command": "snippet.runAction",
          "when": "view == snippet.actions && viewItem == snippet.action",
          "group": "inline@0"
        },
        {
          "command": "snippet.editAction",
          "when": "view == snippet.actions && viewItem == snippet.action",
          "group": "inline@1"
        },
        {
          "command": "snippet.deleteAction",
          "when": "view == snippet.actions && viewItem == snippet.action",
          "group": "inline@2"
        }
      ],
      "editor/context": [
        {
          "submenu": "snippet.editorSubmenu",
          "group": "navigation@99",
          "when": "snippet.hasActions"
        }
      ],
      "editor/title/context": [
        {
          "submenu": "snippet.editorSubmenu",
          "group": "navigation@99",
          "when": "snippet.hasActions"
        }
      ],
      "explorer/context": [
        {
          "submenu": "snippet.explorerSubmenu",
          "group": "navigation@99",
          "when": "snippet.hasActions"
        }
      ],
      "snippet.editorSubmenu": [
        {
          "command": "snippet.showActionPicker",
          "group": "1_run"
        },
        {
          "command": "snippet.newAction",
          "group": "9_manage"
        }
      ],
      "snippet.explorerSubmenu": [
        {
          "command": "snippet.showActionPicker",
          "group": "1_run"
        },
        {
          "command": "snippet.newAction",
          "group": "9_manage"
        }
      ]
    }
  },
  "repository": {
    "url": "https://github.com/SdSadat/Snip-It"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run build:webview && npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run build:webview && npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:webview": "npm --prefix webview install --no-audit --no-fund && npm --prefix webview run build",
    "lint:webview": "npm --prefix webview run lint"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
